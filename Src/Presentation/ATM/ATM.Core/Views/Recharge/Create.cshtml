@model ATM.Core.Services.RechargeATM.RechargeModel
@{
    Layout = "_Layout";
}
<div class="container-fluid px-4">
    <form asp-action="Create" asp-controller="Recharge" method="POST" class="form-group bmd-form-group">
        <div class="card-body">
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4 col-xs-4">
                <div class="form-group">
                    <input asp-for="AtmId" type="hidden" />
                    <label class="font-label">Name</label>
                    <input asp-for="Name" class="form-control" ReadOnly="true">
                    <span asp-validation-for="Name" class="form-text text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="font-label">Banknotes 5000</label><span class="required-field">*</span>
                    <input asp-for="Banknotes5000" type="number" class="form-control" autocomplete="off">
                    <span asp-validation-for="Banknotes5000" class="form-text text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="font-label">Banknotes 2000</label><span class="required-field">*</span>
                    <input asp-for="Banknotes2000" type="number" class="form-control" autocomplete="off">
                    <span asp-validation-for="Banknotes2000" class="form-text text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="font-label">Banknotes 1000</label><span class="required-field">*</span>
                    <input asp-for="Banknotes1000" type="number" class="form-control" autocomplete="off">
                    <span asp-validation-for="Banknotes1000" class="form-text text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="font-label">Banknotes 500</label><span class="required-field">*</span>
                    <input asp-for="Banknotes500" type="number" class="form-control" autocomplete="off">
                    <span asp-validation-for="Banknotes500" class="form-text text-danger"></span>
                </div>
                <br />
                <div style="float:right">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a class="btn btn-secondary" href="@Url.Action("Details", "Recharge", new{id = @Model.AtmId})">Cancel</a>
                </div>
            </div>
        </div>

    </form>
</div>
<br />