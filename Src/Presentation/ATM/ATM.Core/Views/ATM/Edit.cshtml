@model ATM.Core.Services.ATMs.ATMModel

@{
    Layout = "_Layout";
}
<div class="container-fluid px-4">
    <form asp-action="Edit" asp-controller="ATM" method="POST" class="form-group bmd-form-group"
          data-ajax-complete="completedEditingUser">
        <div class="card-body">
            <input asp-for="Id" type="hidden" />
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4 col-xs-4">
                <div class="row">
                    <div class="form-group">
                        <label class="font-label">Name</label><span class="required-field">*</span>
                        <input asp-for="Name" class="form-control" type="text" maxlength="128">
                        <span asp-validation-for="Name" class="form-text text-danger"></span>
                    </div>
                </div>
                <br />
                <div style="float:right">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a class="btn btn-secondary" href="@Url.Action("Index", "ATM")">Cancel</a>
                </div>
            </div>
        </div>
    </form>
</div>
<br />